@model WebApplication1.Models.updateadvisor
@{
    Layout = null;
}

@{
    ViewBag.Title = "Assign Class Advisor | Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href="/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/plugins/node-waves/waves.css" rel="stylesheet" />
    <link href="/plugins/animate-css/animate.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/themes/all-themes.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
</head>
<body class="theme-red">

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>

    <!-- Top Bar -->
    <script type="text/javascript" src="~/js/topbar.js"></script>

    <!-- #Top Bar -->

    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <script type="text/javascript" src="~/js/userinfo.js"></script>

            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                @if (Convert.ToInt32(Session["roleteach"]) == 1)
                {
                    <script type="text/javascript" src="~/js/menuadmin.js"></script>
                }
                @if (Convert.ToInt32(Session["roleteach"]) == 2)
                {
                    <ul class="list">
                        <script type="text/javascript" src="~/js/menuadvisortop.js"></script>
                        @if (Convert.ToInt32(Session["sem"]) == 3 || Convert.ToInt32(Session["sem"]) == 4)
                        {
                            <script type="text/javascript" src="~/js/menuadvisorSEdefaulter.js"></script>
                        }
                        @if (Convert.ToInt32(Session["sem"]) == 5 || Convert.ToInt32(Session["sem"]) == 6)
                        {
                            <script type="text/javascript" src="~/js/menuadvisorTEdefaulter.js"></script>
                        }
                        @if (Convert.ToInt32(Session["sem"]) == 7 || Convert.ToInt32(Session["sem"]) == 8)
                        {
                            <script type="text/javascript" src="~/js/menuadvisorBEdefaulter.js"></script>
                        }

                        <script type="text/javascript" src="~/js/menuadvisorbottom.js"></script>

                    </ul>
                }
                @if (Convert.ToInt32(Session["roleteach"]) == 3)
                {
                    <script type="text/javascript" src="~/js/menuteacher.js"></script>
                }

            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <script type="text/javascript" src="~/js/footer.js"></script>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->

    </section>



    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Assign Class Advisor</h2>
            </div>

            <div class="row clearfix">
                <div class=" col-md-6 col-md-offset-3">
                    <div class="card">
                        <br />
                        <div class="body">
                        @using (Html.BeginForm("updaterole", "updateadvisor", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <form >
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:center;">
                                        <h4>SECM</h4>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.SE, new SelectList(Model.selectSE, "sem","sem"), "Select Sem", new { @class = "form-control " })
                                        
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.teacher, new SelectList(Model.selectadvisor, "id", "name", "roleid"), "Select Teacher", new { @class = "form-control ", data_live_search = "true" })
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:center;">
                                        <h4>TECM</h4>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.TE, new SelectList(Model.selectTE, "sem", "sem"), "Select Sem", new { @class = "form-control " })
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.teacher2, new SelectList(Model.selectadvisor, "id", "name", "roleid"), "Select Teacher", new { @class = "form-control ", data_live_search = "true" })
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:center;">
                                        <h4>BECM</h4>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.BE, new SelectList(Model.selectBE, "sem", "sem"), "Select Sem", new { @class = "form-control " })
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        @Html.DropDownListFor(x => x.teacher3, new SelectList(Model.selectadvisor, "id", "name", "roleid"), "Select Teacher", new { @class = "form-control ", data_live_search = "true" })
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <input type="submit" class="btn bg-orange waves-effect pull-right" value="Assign" />
                                </div>
                                </form>
                         }
</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.js"></script>
    <script src="/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="/plugins/node-waves/waves.js"></script>
    <script src="/js/admin.js"></script>
    <script src="/js/demo.js"></script>
    <script src="/js/pages/forms/basic-form-elements.js"></script>
    <script src="/plugins/bootstrap-select/js/bootstrap-select.js"></script>
</body>
</html>